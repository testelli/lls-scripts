module.exports = {
	suiteName:'Read from file method',				
	run: function (test) {

		console.log('Starting read from file script for LTN...');

		//setup for read file
		var fs = require('fs');
		var file_h = fs.open('/Users/matt/Desktop/Projects/LLS/LLS Automation/LLS_Tests/Paths/Regression_LTNPaths.txt', 'r');

		//set timeout
		casper.options.waitTimeout = 60000; 
		
		//start test
		casper.start(env + 'lightthenight.org', function startUp() {
			//casper.waitForSelector("a[href='/firsttimehere/']", function() {
				test.assertTitle("Light The Night Walk: Taking Steps to Cure Cancer", "LTN Home: Page title is correct");
				test.assertUrlMatch(env, 'Current page is served in ' + env);
				test.assertExists('div#content', "LTN Home Page: Page content exists.");
				casper.capture('Screenshots/LTN/LTN_Home.png');	
			//});
		});	

		//Readfile, pass lines to function, execute assertions based on lines read in.
		casper.then(function() {
			var data = [];
			var line = file_h.readLine();

			//Read in a line
			while(line) {

				//print the current line
				console.log("The currently read line: " + line);
				
				data.push(line.split('~'));

				line = file_h.readLine();
			} 

			file_h.close(); //close file

			var func = function(index) {

				casper.thenClick("a[href='"+data[index][0]+"']", function loopin() {


					//wait
					casper.wait(3000);


					console.log('I am going to click this: ' + data[index][0]);
					console.log('I am going to assert this: ' + data[index][1]);
					
					test.assertTitle(data[index][1], "Page title is correct");
					test.assertUrlMatch(env, 'Current page is served in ' + env);
					test.assertExists('div#mainContent_subpage', "Page content exists.");
					casper.capture('Screenshots/TNT/'+data[index][1]+'.png');
					
					if (index < data.length) {
						func(index + 1);
					}
				});
			};

			if (data.length > 0) {
				func(0);
			}

	});

		casper.run(function() {
			
			test.done();
		});

	}

}






